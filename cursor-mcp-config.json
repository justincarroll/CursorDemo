{
  "mcpServers": {
    "chesscom-design-system": {
      "command": "npx",
      "args": ["-y", "-p", "@chesscom/design-system-mcp@latest", "chesscom-ds-mcp"]
    },
    "figma": {
      "command": "npx",
      "args": ["-y", "figma-developer-mcp", "--stdio"],
      "env": {
        "FIGMA_API_KEY": "YOUR_FIGMA_ACCESS_TOKEN"
      }
    }
  }
}
